# docs: https://jekyllrb.com/docs/plugins/installation/
# list of plugins pre-installed by github pages: https://pages.github.com/versions/

source "https://rubygems.org"

gem 'jekyll'

# these plugins are forcefully loaded, regardless of the config file!
group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
end

# these plugins are loaded only if set in the config file
gem 'jekyll-paginate'
gem 'jekyll-titles-from-headings'
